<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="450.0" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:controller="ivascape.view.serve.LinkEditDialogController">
    <GridPane alignment="CENTER" vgap="10.0" VBox.vgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="193.0" minWidth="10.0" prefWidth="172.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="287.0" minWidth="10.0" prefWidth="254.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <children>
            <Label text="%edittabs.neighbour" GridPane.rowIndex="1" />
            <Label text="%edittabs.price" GridPane.rowIndex="2" />
         <TextField fx:id="neighbourOneField" maxHeight="22.0" minHeight="22.0" onAction="#handleOK" prefHeight="22.0" promptText="%prompt.nextdoor" GridPane.columnIndex="1" />
            <TextField fx:id="neighbourTwoField" maxHeight="22.0" minHeight="22.0" onAction="#handleOK" prefHeight="22.0" promptText="%prompt.nextdoor" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <children>
                    <Label text="\$" />
                    <TextField fx:id="priceField" maxHeight="22.0" minHeight="22.0" onAction="#handleOK" prefHeight="22.0" promptText="%prompt.price">
                        <HBox.margin>
                            <Insets left="4.0" />
                        </HBox.margin>
                    </TextField>
                </children>
            </HBox>
            <Label text="%edittabs.neighbour" />
        </children>
        <padding>
            <Insets left="12.0" right="12.0" />
        </padding>
        <VBox.margin>
            <Insets top="8.0" />
        </VBox.margin>
    </GridPane>
    <Separator prefWidth="200.0">
        <VBox.margin>
            <Insets top="12.0" />
        </VBox.margin>
    </Separator>
    <HBox alignment="CENTER" maxHeight="45.0" minHeight="45.0" prefHeight="45.0" prefWidth="200.0" spacing="8.0">
        <children>
            <Button defaultButton="true" maxWidth="75.0" minWidth="75.0" mnemonicParsing="false" onAction="#handleOK" prefWidth="75.0" text="%alert.OK" />
            <Button cancelButton="true" maxWidth="75.0" minWidth="75.0" mnemonicParsing="false" onAction="#handleCancel" prefWidth="75.0" text="%alert.cancel" />
        </children>
    </HBox>
